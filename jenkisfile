pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                git 'https://github.com/Jayrivarex/jenkdock.git'
                sh 'docker build -t dockerfile .'
            }
        }
        stage('Test') {
            steps {
                sh 'docker run my-app npm test'
            }
        }
        stage('Deploy') {
            steps {
                echo "this is my first Docker and Jenkins integration project"
                }
            }
        }
    }
